{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "playwright"
    ],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@pages": [
        "src/pages/index"
      ],
      "@helpers/*": [
        "src/helpers/*"
      ],
      "@types": [
        "src/types/index"
      ]
    }
  },
  "include": [
    "e2e",
    "src"
  ]
}
